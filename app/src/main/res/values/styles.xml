<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="sublimePickerStyle">@style/SublimePickerStyle</item>
    </style>

    <style name="AppDialog" parent="Theme.MaterialComponents.Light.Dialog" />

    <style name="ToolbarStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="NavigationTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SublimePickerStyle" parent="SublimePickerStyleLight">
        <item name="colorAccent">#2EC0D1</item>
    </style>
</resources>
